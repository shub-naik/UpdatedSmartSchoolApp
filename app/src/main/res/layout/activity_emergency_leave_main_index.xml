<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.SchoolManagement.EmergencyLeaveMainIndexActivity">

    <androidx.appcompat.widget.Toolbar
    android:id="@+id/EmergencyLeaveMainIndexToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:theme="@style/EmergencyLeave"
    app:navigationIcon="?attr/homeAsUpIndicator"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:titleTextColor="@color/ToolbarColor" />


    <EditText
        android:id="@+id/EmergencyPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Parent's Phone Number"
        android:inputType="phone" />

    <Spinner
        android:id="@+id/StudentsClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/classes" />

    <Spinner
        android:id="@+id/StudentsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/section" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/EStudentImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/EParentPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Phone"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/EStudentName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Student Name"
                android:visibility="invisible" />


            <Button
                android:id="@+id/SendNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Notification to the Parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
