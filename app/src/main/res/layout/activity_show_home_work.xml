<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pragyatitsolutions.SchoolManagement.ShowHomeWorkActivity">

    <TextView
        android:id="@+id/txtLatestHomeWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Latest/Upcoming Homework's"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/NoMoreHomeWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HomeWork Not Uploaded Yet"
        android:textSize="20dp"
        android:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewShowHomeWork"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
