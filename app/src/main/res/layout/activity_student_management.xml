<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.pragyatitsolutions.SchoolManagement.TeacherManagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/addstudent" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/deletestudent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="130dp"
        android:weightSum="2">

        <Button
            android:id="@+id/StudentAdd"
            android:background="@drawable/rounded_buttons"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Add Student" />

        <Button
            android:id="@+id/DeleteStudent"
            android:layout_marginLeft="45dp"

            android:layout_width="150dp"
            android:layout_height="40dp"

            android:background="@drawable/rounded_buttons"

            android:text="Delete Student" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/updateicon" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/viewicon" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/UpdateStudent"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_buttons"
            android:layout_marginTop="40dp"
            android:text="Update Student" />


        <Button
            android:id="@+id/ViewStudent"
            android:layout_marginLeft="45dp"

            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_buttons"
            android:layout_marginTop="40dp"
            android:text="View Student" />

    </LinearLayout>
</RelativeLayout>
