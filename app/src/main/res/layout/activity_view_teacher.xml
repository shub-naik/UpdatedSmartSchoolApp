<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.SchoolManagement.ViewTeacher">

    <EditText
        android:id="@+id/TeacherPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter The Phone Number of Teacher"
        android:inputType="number"></EditText>

    <Button
        android:id="@+id/ViewTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Teacher"></Button>


    <ImageView
        android:id="@+id/TeacherImage"
        android:visibility="invisible"
        android:layout_width="500dp"
        android:layout_height="125dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/Name"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TeacherImage"
        android:gravity="center"
        android:text="Name" />

    <TextView
        android:id="@+id/Email"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TeacherImage"
        android:gravity="center"
        android:text="Email" />

    <TextView
        android:id="@+id/Password"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TeacherImage"
        android:gravity="center"
        android:text="Password" />

    <TextView
        android:id="@+id/Phone"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TeacherImage"
        android:gravity="center"
        android:text="Phone" />

    <TextView
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:id="@+id/SubjectsSections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        />


</LinearLayout>
