<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/show_homework"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/SubjectTeacherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher_Name:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/SubjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject_Name:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/HomeWorkSubjectDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HomeWork_DeadLine_Date:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/HomeWorkRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remarks:"
                android:textColor="@color/blue" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>