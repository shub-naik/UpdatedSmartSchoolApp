<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- For Splash Screen -->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Only NoActionBar Theme For Login Screen -->
    <style name="LoginScreen" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- For EmergencyLeave MainIndex Screen -->
    <style name="EmergencyLeave" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:homeAsUpIndicator">@drawable/back_button</item>
    </style>

    <!-- For EmergencyLeave MainIndex Screen -->
    <style name="ParentMainIndex" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:homeAsUpIndicator">@drawable/back_button</item>
    </style>

</resources>
